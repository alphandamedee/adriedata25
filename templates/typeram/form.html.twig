{% extends 'base.html.twig' %}
{% block title %}Formulaire{% endblock %}
{% block body %}
<div class="container mt-5">
    <h2>{{ form.vars.value.id ? 'Modifier' : 'Ajouter' }} un élément</h2>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary mt-3">Enregistrer</button>
    {{ form_end(form) }}
    <a href="{{ path(back_route) }}" class="btn btn-secondary mt-2">Retour</a>
</div>
{% endblock %}
