{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="container bg-light">
    <h2 class="text-center mt-3 mb-4">Liste des Produits</h2>

 
    <!-- R√©sultat recherche -->
    <p class="text-center">
        Nombre de produits trouv√©s : <strong>{{ produits|length }}</strong>
        {% if app.request.query.get('search') %}
            pour le mot cl√© "<strong>{{ app.request.query.get('search') }}</strong>"
        {% endif %}
    </p>
    

       <!-- Formulaire de recherche -->
    <form method="get" action="{{ path('app_produit') }}" class="mb-4">
        <div class="row align-items-center">
            <div class="col-1">
                <button type="button" class="btn btn-secondary w-100" id="scan-barcode-btn" data-bs-toggle="modal" data-bs-target="#barcodeModal" title="Scanner">
                    <i class="bi bi-upc-scan"></i>
                </button>
            </div>
            <div class="col-4">
                <input type="text" name="search" id="search-input" class="form-control" placeholder="Rechercher un produit" value="{{ app.request.query.get('search') }}">
            </div>
            <div class="col-1">
                <button class="btn btn-primary w-100 d-none d-md-block" type="submit" title="Rechercher">üîç</button>
                <button class="btn btn-primary w-100 d-md-none" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            
        <div class="col-md-1">
            <a href="{{ path('app_produit') }}" class="btn btn-outline-secondary" title=" R√©initialiser">
                ‚ôªÔ∏è
            </a>
        </div>

            <div class="col-3">
                <a href="{{ path('produit_ajouter') }}" id="add-product-link" class="btn btn-success w-100">
                    <i class="bi bi-plus-circle"></i> Ajouter un Produit
                </a>
            </div>

            
            <!-- Bouton d'export -->
            <div class="col-2 text-end">
                <a href="{{ path('produit_export', { format: 'csv' }) }}" class="btn btn-outline-primary me-2" title="Exporter CSV">
                    <i class="bi bi-file-earmark-spreadsheet"></i>
                </a>
                <a href="{{ path('produit_export', { format: 'excel' }) }}" class="btn btn-outline-success" title="Exporter Excel">
                    <i class="bi bi-file-earmark-excel"></i>
                </a>
            </div>

        </div>
    </form>

    <!-- Tableau -->
    <div class="table-responsive">
        <table id="produit-table" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Code Barre</th>
                    <th>Cat√©gorie</th>
                    <th>Marque</th>
                    <th>Mod√®le</th>
                    <th>Stockage</th>
                    <th>RAM</th>
                    <th>Statut</th>
                    <th>Code √âtag√®re</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td class="no-wrap">{{ produit.idProduit | default('N/A')}}</td>
                        <td class="no-wrap">{{ produit.codeBarre | default('N/A') }}</td>
                        <td class="no-wrap">{{ produit.categorie | default('N/A')}}</td>
                        <td class="">{{ produit.marque | default('N/A')}}</td>
                        <td class="">{{ produit.modele | default('N/A')}}</td>
                        <td class="no-wrap">{{ produit.stockage | default('N/A')}} {{ produit.typeStockage | default('N/A')}}</td>
                        <td class="no-wrap">{{ produit.ram | default('N/A')}} {{ produit.typeRam | default('N/A') }}</td>
                        <td class="no-wrap"><span class="badge bg-{{ produit.statut == 'Disponible' ? 'success' : produit.statut == 'R√©par√©' ? 'info' : produit.statut == 'HS' ? 'danger' : produit.statut == 'Vendu' ? 'secondary' : 'warning' }}">{{ produit.statut | default('N/A')}}</span></td>
                        <td class="no-wrap text-center">{{ produit.codeEtagere | default('N/A') }}</td>
                        <td class="d-flex flex-nowrap">
                            <a href="{{ path('produit_modifier', { id: produit.idProduit }) }}" class="btn btn-warning btn-sm me-1" title="Modifier"><i class="bi bi-pencil"></i></a>
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                                <form method="post" action="{{ path('produit_supprimer', { id: produit.idProduit }) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.idProduit) }}">
                                    <button class="btn btn-danger btn-sm me-1" title="Supprimer"><i class="bi bi-trash"></i></button>
                                </form>
                            {% endif %}
                            <a href="{{ path('intervention_new', { id: produit.idProduit }) }}" class="btn btn-info btn-sm" title="Intervenir"><i class="bi bi-tools"></i></a>
                        </td>
                    </tr>
                
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- MODAL SCANNER -->
<div class="modal fade" id="barcodeModal" tabindex="-1" aria-labelledby="barcodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-success">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="barcodeModalLabel">Scanner un code-barres</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <div id="scanner-container" class="text-center">
                    <div id="scanner" style="width:100%; height:300px;"></div>
                </div>
                <div id="alert-box" class="alert alert-warning mt-3 d-none text-center">
                    Aucun code d√©tect√©. Veuillez r√©essayer.
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" id="retry-scan">üîÑ R√©essayer</button>
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">‚ùå Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- √âl√©ment audio pour le son de scan -->
<audio id="scan-beep" src="{{ asset('sounds/beep.mp3') }}" preload="auto"></audio>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/quagga@0.12.1/dist/quagga.min.js"></script>
<script src="{{ asset('js/app.js') }}"></script>
<script src="{{ asset('js/scan.js') }}"></script>
<script>
$(document).ready(function() {
    if ($("#produit-table tbody tr").length > 0 &&
        !$("#produit-table tbody tr td").first().attr("colspan")) {
        $('#produit-table').DataTable({
            responsive: true
            pageLength: 100, // Nombre d'√©l√©ments par d√©faut
            lengthMenu: [5, 10, 25, 50, 100], // Options de choix d'affichage par page
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json" // Traduction en fran√ßais
            }
        });
    }
});
</script>

{% endblock %}
