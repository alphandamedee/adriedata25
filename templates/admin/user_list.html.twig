{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Liste des utilisateurs</h2>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">‚ûï Ajouter un utilisateur</a>
    </div>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}{{ message }}{% endfor %}
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>R√¥le</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.prenom }} {{ user.nomUser }}</td>
                        <td>{{ user.mailUser }}</td>
                        <td>{{ user.role.roleName }}</td>
                        <td>
                            {% if user.photo %}
                                <img src="{{ asset('uploads/photos/' ~ user.photo) }}" alt="photo" width="50" class="rounded-circle">
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
                            <a href="{{ path('admin_user_reset_password', {'id': user.id}) }}"
                                class="btn btn-sm btn-secondary"
                                onclick="return confirm('R√©initialiser le mot de passe de cet utilisateur ?');">üîë R√©initialiser
                            </a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucun utilisateur trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
