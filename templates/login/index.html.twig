{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-eye {
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.375rem 0.75rem;
            border-left: none;
            margin-left: -1px;
        }
        .input-group {
            align-items: center;
        }
        .input-group .form-control {
            height: 38px;
        }
        .input-group-append {
            display: flex;
            height: 38px;
        }
        .bi-eye, .bi-eye-slash {
            font-size: 1.1rem;
            line-height: 1;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <!-- Logo -->
        <div class="logo-container text-center">
            <img src="{{ asset('images/logo-Adrie.png') }}" alt="Logo" class="logo">
        </div>

        <h2 class="text-center">Connexion</h2>

        {% if logout_message is not empty %}
            <div class="alert alert-success text-center">
                {{ logout_message|first }}
            </div>
        {% endif %}
        
        {# {% if error %}
            <div class="alert alert-danger text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %} #}

         {% if error %}
        <div class="alert alert-danger w-100 text-center" role="alert">
            <p >Adresse mail et/ou mot de passe incorrect! </p>
        </div>
        {% endif %}

        <form method="post" class="login-form">
            <div class="mb-3">
                <label for="mailUser" class="form-label fw-bold">Email</label>
                <div class="input-group">
                    <input type="email" value="{{ last_username |default('')}}" name="mailUser" id="mailUser" class="form-control" placeholder="üìß Votre email" required autofocus>
                </div>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label fw-bold">Mot de passe</label>
                <div class="input-group">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="üîí Votre mot de passe" required>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary btn-eye" type="button" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </div>
        </form>

        <!-- Lien en dehors du formulaire -->
        <div class="text-center mt-3">
            <a href="{{ path('forgot_password') }}" class="text-decoration-none">Mot de passe oubli√© ?</a>
        </div>
    </div>

    <div class="container text-center mt-5">
        <div class="card shadow p-4">
            <h5 class="text-center mb-4 fs-4">Bienvenue sur <strong>ADRIEDATA</strong> üëã</h5>
            <p class="fs-10">
                ADRIEDATA est un outil simple et pratique pour aider l‚Äôassociation <em>ADRIE</em> 
                √† g√©rer le mat√©riel informatique collect√©, r√©par√© et redistribu√©.
            </p>
            <p class="fs-10">
                L'application permet de suivre les produits, organiser les interventions 
                et travailler m√™me sans connexion Internet ‚Äî le tout avec une interface accessible 
                selon les r√¥les de chacun.
            </p>
            <p class="fs-10 text-success">
                Un grand merci √† toutes les personnes qui m'ont accompagn√© et soutenu pendant ce projet üôè
            </p>
        </div>
    </div>

<script>
document.getElementById('togglePassword').addEventListener('click', function() {
    const passwordInput = document.getElementById('inputPassword');
    const icon = this.querySelector('i');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        icon.classList.remove('bi-eye');
        icon.classList.add('bi-eye-slash');
    } else {
        passwordInput.type = 'password';
        icon.classList.remove('bi-eye-slash');
        icon.classList.add('bi-eye');
    }
});
</script>
{% endblock %}
